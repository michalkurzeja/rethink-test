{
    "name": "msales/flyweight-blueprint-example",
    "description": "Example project using Flyweight Blueprint",
    "type": "project",
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:msales/flyweight-blueprint.git"
        },
        {
            "type": "git",
            "url": "git@github.com:msales/flyweight-contracts.git"
        },
        {
            "type": "git",
            "url": "git@github.com:msales/flyweight-core.git"
        }
    ],
    "require": {
        "php": "7.*",
        "msales/flyweight-blueprint": "0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "mockery/mockery": "^0.9.5"
    },
    "autoload": {
        "psr-4": {
            "msales\\Flyweight\\BlueprintExample\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "msales\\Flyweight\\BlueprintExample\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "php core config:cache --only-on=production",
            "php core route:cache --only-on=production"
        ]
    }
}
